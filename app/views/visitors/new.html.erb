<% content_for :title do %>Rails <% end %>
<% content_for :description do %> Getstarted with Rails <% end %>
<section> 
	<img src="http://lorempixel.com/400/200/sports/">
</section>
<section>
	<div class='column'>
		<h3> Stay in touch</h3>
	</div>
	<div class="column">
		<div class="form-centered">
			<%= simple_form_for @visitor do |f| %>
			<%= f.error_notification %>
			<%= f.input :email, label: false, :placeholder => 'your email address..' %>
			<br />
			<%= f.button :submit, "Signup for the newsletter", :class => "submit" %>
			<% end %>
		</div> 
	</div>
</section>
